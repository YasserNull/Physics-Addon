{
    "format_version": "1.12.0",
    "minecraft:entity": {
        "description": {
            "identifier": "mc:block",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false,
            "scripts": {
                "animate": [
                    {
                        "1": "!query.is_moving && (q.variant == 1)"
                    },
                    {
                        "2": "query.is_in_water && (q.variant == 1 || q.variant == 2)"
                    },
                    {
                        "3": "query.is_in_lava && (q.variant == 1 || q.variant == 2)"
                    }
                ]
            },
            "animations": {
                "1": "animation.despawn_block",
                "2": "animation.block_in_water",
                "3": "animation.block_in_lava"
            }
        },
        "component_groups": {
            "mc:break_block": {
                "minecraft:variant": {
                    "value": 1
                },
                "minecraft:scale": {
                    "value": 0.891666667
                }
            },
            "mc:explode_block": {
                "minecraft:variant": {
                    "value": 2
                },
                "minecraft:scale": {
                    "value": 2.7
                }
            },
            "mc:despawn_animation": {
                "minecraft:is_baby": {}
            },
            "mc:despawn": {
                "minecraft:despawn": {}
            }
        },
        "components": {
            "minecraft:type_family": {
                "family": [
                    "inanimate"
                ]
            },
            "minecraft:collision_box": {
                "width": 0,
                "height": 0
            },
            "minecraft:damage_sensor": {
                "triggers": {
                    "cause": "all",
                    "deals_damage": false
                }
            },
            "minecraft:physics": {
                "has_collision": true,
                "has_gravity": true
            },
            "minecraft:behavior.float": {
                "priority": 0
            },
            "minecraft:can_fly": {},
          //  "minecraft:is_stackable": {},
            "minecraft:nameable": {},
            "minecraft:persistent": {},
       
            "minecraft:conditional_bandwidth_optimization": {
    "default_values": {
        "max_optimized_distance": 10, 
        "max_dropped_ticks": 1, 
        "use_motion_prediction_hints": false 
    }
}
},
        "events": {
            "mc:break_block": {
                "add": {
                    "component_groups": [
                        "mc:break_block"
                    ]
                }
            },
            "mc:explode_block": {
                "add": {
                    "component_groups": [
                        "mc:explode_block"
                    ]
                }
            },
            "mc:despawn_animation": {
                "add": {
                    "component_groups": [
                        "mc:despawn_animation"
                    ]
                }
            },
            "mc:despawn": {
                "add": {
                    "component_groups": [
                        "mc:despawn"
                    ]
                }
            }
        },
        "minecraft:pushable": {
            "is_pushable": true,
            "is_pushable_by_piston": true
        }
    }
}
