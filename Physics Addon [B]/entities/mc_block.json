{
    "format_version": "1.15.0",
    "minecraft:entity": {
        "description": {
            "identifier": "mc:block",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false,
            "scripts": {
                "animate": [
                    {
                        "1": "!query.is_moving && (q.variant == 1)"
                    },
                    {
                        "2": "query.is_in_water && (q.variant == 1 || q.variant == 2)"
                    },
                    {
                        "3": "query.is_in_lava && (q.variant == 1 || q.variant == 2)"
                    }
                ]
            },
            "animations": {
                "1": "animation.remove_block",
                "2": "animation.block_in_water",
                "3": "animation.block_in_lava"
            }
        },
        "component_groups": {
            "mc:break_block": {
                "minecraft:variant": {
                    "value": 1
                },
                "minecraft:scale": {
                    "value": 0.891666667
                }
            },
            "mc:explode_block": {
                "minecraft:variant": {
                    "value": 2
                },
                "minecraft:scale": {
                    "value": 2.7
                }
            },
            "mc:remove_block": {
                "minecraft:is_baby": {}
            }
        },
        "components": {
            "minecraft:type_family": {
                "family": [
                    "inanimate"
                ]
            },
            "minecraft:collision_box": {
                "width": 0,
                "height": 0
            },
            "minecraft:damage_sensor": {
                "triggers": {
                    "cause": "all",
                    "deals_damage": false
                }
            },
            "minecraft:physics": {
                "has_collision": true,
                "has_gravity": true
            },
            "minecraft:behavior.float": {
                "priority": 0
            },
            "minecraft:can_fly": {},
            "minecraft:is_stackable": {},
            "minecraft:nameable": {},
            "minecraft:persistent": {}
        },
        "events": {
            "mc:break_block": {
                "add": {
                    "component_groups": [
                        "mc:break_block"
                    ]
                }
            },
            "mc:explode_block": {
                "add": {
                    "component_groups": [
                        "mc:explode_block"
                    ]
                }
            },
            "mc:remove_block": {
                "add": {
                    "component_groups": [
                        "mc:remove_block"
                    ]
                }
            }
        },
        "minecraft:pushable": {
            "is_pushable": true,
            "is_pushable_by_piston": true
        }
    }
}
